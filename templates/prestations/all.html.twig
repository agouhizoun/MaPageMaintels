{% extends "layout.html.twig" %}

{% block title %}
Toutes les prestations
{% endblock %}

{% block content %}

<div class="text-center mb-5">
    <h4>Liste des prestations</h4>
</div>
<div class="row mt-5">

    <div class="col-md-2 justify-content-center pt-4">
        <ul class="list-group">
            <a class="text-decoration-none" href="{{ path("prestations_all") }}"> <li class="list-group-item btn btn-primary">Toutes les Prestations</li></a>
            {% for categorie in categories %}
            <a class="text-decoration-none" href="{{ path('prestations_categorie', {id: categorie.id}) }}">
                <li class="list-group-item btn-primary text-center">{{ categorie.nom }}</li>
            </a>
            {% endfor %}
        </ul>
    </div>
    <div class="col-md-10 justify-content-center text-center">
        <h4> liste des prestations </h4>
        {% for prestation in prestations %}
        <div class="row justify-content-center">
            <div class="col card mb-3 " style="max-width: 800px;">
                <div class="row g-0">
                    <div class="col-md-6 text-center">
                        <img src="{{ asset('photosProduits/' ~ prestation.photo) }}" class="img-fluid rounded-start"
                            alt="{{ prestation.nom }}">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <h4 class="card-title"><a
                                    href="{{ path('prestation_show', {id: prestation.id}) }}">{{prestation.nom}}</a></h4>
                            <h6>categorie :
                                {% if prestation.categorie %}
                                {{ prestation.categorie.nom }}</h6>
                            {% else %}
                            inconnue
                            {% endif %}

                            <h6 class="text-muted">ajouté le : {{ prestation.dateEnregistrement | date('d/m/Y') }}</h6>
                            <h5>prix : <strong>{{ prestation.prixPrestation }}€</strong></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}

    </div>

    {% endblock %}